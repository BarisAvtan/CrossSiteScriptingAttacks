@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CommantAdd</title>
</head>
<body>
    <form method="post">
        <input type="text" name="name" />
        <br />
        <textarea name="comment"></textarea>
        <br />
        <input type="submit" value="Gönder" />
    </form>
    <h1>Yorumlar</h1>
    <strong>@ViewBag.name</strong>
    <hr />
    <span>@Html.Raw(ViewBag.comment)</span>@*@Html.Raw güvenlik açığıdır*@

</body>
</html>
